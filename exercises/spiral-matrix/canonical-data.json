{
  "exercise": "spiral-matrix",
  "version": "1.1.0",
  "cases": [
    {
      "description": "empty spiral",
      "property": "spiralMatrix",
      "input": {
        "size": 0
      },
      "expected": []
    },
    {
      "description": "trivial spiral",
      "property": "spiralMatrix",
      "input": {
        "size": 1
      },
      "expected": [ [1] ]
    },
    {
      "description": "spiral of size 2",
      "property": "spiralMatrix",
      "input": {
        "size": 2
      },
      "expected": [ [1, 2]
                  , [4, 3] ]
    },
    {
      "description": "spiral of size 3",
      "property": "spiralMatrix",
      "input": {
        "size": 3
      },
      "expected": [ [1, 2, 3]
                  , [8, 9, 4]
                  , [7, 6, 5] ]
    },
    {
      "description": "spiral of size 4",
      "property": "spiralMatrix",
      "input": {
        "size": 4
      },
      "expected": [ [ 1,  2,  3, 4]
                  , [12, 13, 14, 5]
                  , [11, 16, 15, 6]
                  , [10,  9,  8, 7] ]
    },
    {
      "description": "spiral of size 5",
      "property": "spiralMatrix",
      "input": {
        "size": 5
      },
      "expected": [ [ 1,  2,  3,  4, 5]
                  , [16, 17, 18, 19, 6]
                  , [15, 24, 25, 20, 7]
                  , [14, 23, 22, 21, 8]
                  , [13, 12, 11, 10, 9] ]
    }
  ]
}
